<!--welcome Dr., message-->
<section id="welcome">
  <div>
    <h2>Welcome, Dr. {{name}}!</h2>
  </div>
</section>
 <!--aside starts-->
<aside class="content">
  <div class="container">
    <h1 class="label">Create a New Patient:</h1>

    <form class="form new-patient-form">
      <div class="form-group">
        <label for="patient-name">Patient Name:</label>
        <input class="form-input" type="text" id="patient-name" name="patient-name" />
      </div>
      <div class="form-group">
        <label for="patient-phone">Phone :</label>
        <input class="form-input" type="number" id="patient-phone" name="patient-phone" />
      </div>
      <div class="form-group">
        <label for="patient-DOB">DOB :</label>
        <input type="date" class="form-input" id="patient-DOB" name="patient-DOB"></input>
      </div>
      <div class="form-group">
        <label for="patient-insurance">Insurance :</label>
        <input class="form-input" type="text" id="patient-insurance" name="patient-insurance" />
      </div>
      <div class="form-group">
        <label for="patient-next-appointment">Next Appointment :</label>
        <input type="date" class="form-input" id="patient-next-appointment" name="patient-next-appointment"></input>
      </div>
      <div class="form-group">
        <label for="patient-email">Email :</label>
        <input class="form-input" type="text" id="patient-email" name="patient-email" />
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

<!--current patient list-->
  <div class="patient-list">
    <h3>Current Patients:</h3>

    {{#each Patients as |patient|}}
    <div>
      <div>
        <h4><a href="/patient/{{patient.id}}">{{patient.name}}</a></h4>
        <h3><a href="/patient/{{patient.id}}">{{patient.phone}}</a></h3>
        <h3><a href="/patient/{{patient.id}}">{{patient.DOB}}</a></h3>
        <h3><a href="/patient/{{patient.id}}">{{patient.Insurance}}</a></h3>
      </div>
      <div>
        <button class="btn btn-sm btn-danger" data-id="{{patient.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>

</div>

<script src="./js/profile.js"></script>